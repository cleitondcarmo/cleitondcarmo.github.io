{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.vue", "src/**/*.tsx", "src/**/*.d.tsx", "src/services/projects.js", "src/router/index.ts", "src/main.js"],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "lib": ["dom", "es2018"],
    "noImplicitAny": false,
    "removeComments": false,
    "importsNotUsedAsValues": "remove",
    "preserveValueImports": false,
    "verbatimModuleSyntax": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"]
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
